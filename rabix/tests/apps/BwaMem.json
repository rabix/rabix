                "category": "Algorithm options", 
                "description": "Gap extension penalty. A gap of length k costs O + k*E (i.e. -O is for opening a zero-length gap). [default: 1]", 
                "min": null, 
                "default": 1, 
                "max": null, 
                "required": false, 
                "list": false, 
                "step": null, 
                "type": "integer", 
                "id": "gap_extension_penalty_deletion", 
                "condition": null, 
                "name": "Gap extension penalty."
            }, 
