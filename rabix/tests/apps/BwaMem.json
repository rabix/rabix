    "schema": {
        "$$type": "schema/app/sbgsdk",
        "inputs": [
            {
                "description": "Read sequence (or the first mate of a paired end read)", 
                "required": false,
                "list": true,
                "id": "read", 
                "types": [
                    "fastq"
                ], 
                "name": "Read sequence"
            }, 
