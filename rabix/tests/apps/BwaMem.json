                "category": "Algorithm options", 
                "description": "Skip mate rescue", 
                "default": false, 
                "required": false, 
                "list": false, 
                "type": "boolean", 
                "id": "skip_mate_rescue", 
                "condition": null, 
                "name": "Skip mate rescue."
            }, 
