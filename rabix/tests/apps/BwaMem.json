                "category": "Algorithm options", 
                "description": "Penalty for a mismatch. [default: 4]", 
                "min": null, 
                "default": 4, 
                "max": null, 
                "required": false, 
                "list": false, 
                "step": null, 
                "type": "integer", 
                "id": "mismatch_penalty", 
                "condition": null, 
                "name": "Penalty for a mismatch."
            }, 
